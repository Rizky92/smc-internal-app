{
    "name": "rizky92/smc-internal-app",
    "type": "project",
    "description": "SMC Internal App",
    "require": {
        "php": "^7.4",
        "ext-xlswriter": "*",
        "brick/money": "^0.5.3",
        "diglactic/laravel-breadcrumbs": "^8.1.1",
        "fideloper/proxy": "^4.4.2",
        "fruitcake/laravel-cors": "^2.2.0",
        "guzzlehttp/guzzle": "^7.9.2",
        "infyomlabs/routes-explorer": "^1.0.0",
        "lab404/laravel-impersonate": "^1.7.6",
        "laravel/framework": "^8.83.29",
        "laravel/tinker": "^2.10.0",
        "livewire/livewire": "^2.12.8",
        "noprotocol/php-mysql-aes-crypt": "^2.0.2",
        "nullpunkt/lz-string-php": "^1.3",
        "phpseclib/phpseclib": "^3.0.43",
        "rap2hpoutre/laravel-log-viewer": "^2.4.0",
        "reedware/laravel-composite-relations": "^3.0.1",
        "rizky92/carbon-helper": "^0.0.3",
        "rizky92/xlswriter-for-laravel": "^0.1.2",
        "spatie/laravel-permission": "^5.11.1",
        "spatie/laravel-settings": "^3.4.0",
        "spatie/simple-excel": "^1.13.1",
        "staudenmeir/belongs-to-through": "^2.11.2",
        "staudenmeir/eloquent-eager-limit": "^1.6.1",
        "staudenmeir/eloquent-has-many-deep": "^1.14.4",
        "staudenmeir/laravel-adjacency-list": "^1.9.6",
        "staudenmeir/laravel-cte": "^1.5.5"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7.0",
        "barryvdh/laravel-ide-helper": "^2.14.0",
        "facade/ignition": "^2.17.7",
        "fakerphp/faker": "^1.24.1",
        "friendsofphp/php-cs-fixer": "^3.68.1",
        "laravel/dusk": "^6.25.2",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^5.11.0",
        "phpunit/phpunit": "^9.6.22",
        "psalm/plugin-laravel": "^1.6.3",
        "staudenmeir/laravel-migration-views": "^1.5.1",
        "vimeo/psalm": "^4.30"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4.33"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders",
            "Database\\Factories\\": "database/factories"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan livewire:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "ide-helper": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models --nowrite",
            "@php artisan ide-helper:meta"
        ],
        "psalm:scan": [
            "@php vendor/bin/psalm"
        ],
        "psalm:update-baseline": [
            "@php vendor/bin/psalm --update-baseline"
        ],
        "psalm:clear-cache": [
            "@php vendor/bin/psalm --clear-cache"
        ],
        "psalm:alter": [
            "@php vendor/bin/psalm --alter --issues=MissingParamType,MissingReturnType,MissingClosureReturnType,InvalidReturnType,InvalidNullableReturnType,InvalidFalsableReturnType,MismatchingDocblockParamType,MismatchingDocblockReturnType,ParamNameMismatch,PossiblyUndefinedVariable,PossiblyUndefinedGlobalVariable,UnnecessaryVarAnnotation --allow-backwards-incompatible-changes=true"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php",
            "npm run pb"
        ],
        "lint": [
            "@ide-helper",
            "@psalm:clear-cache",
            "@psalm:alter",
            "@cs"
        ],
        "optimize": [
            "@php artisan optimize -q",
            "@php artisan view:cache -q",
            "@php artisan livewire:discover -q",
            "@php artisan settings:discover -q"
        ],
        "optimize:clear": [
            "@php artisan optimize:clear",
            "@php artisan livewire:discover",
            "@php artisan settings:clear-cache",
            "@php artisan settings:clear-discover"
        ]
    }
}
